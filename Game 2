let index = 0;
let score = 0;
let timeLeft = 15;
let timerId;

function startTimer() {
    timeLeft = 15;
    document.getElementById("timer").innerHTML = "‚è≥ " + timeLeft + " ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ";

    timerId = setInterval(() => {
        timeLeft--;
        document.getElementById("timer").innerHTML = "‚è≥ " + timeLeft + " ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ";

        if (timeLeft <= 0) {
            clearInterval(timerId);
            index++;
            loadQuestion();
        }
    }, 1000);
}

function loadQuestion() {
    clearInterval(timerId);

    if (index >= quiz.length) {
        document.getElementById("game").innerHTML = `
            <h3>‡∏à‡∏ö‡πÄ‡∏Å‡∏°</h3>
            <p>‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô <b>${score}</b> ‡∏à‡∏≤‡∏Å ${quiz.length} ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô</p>
        `;
        document.getElementById("timer").innerHTML = "";
        return;
    }

    const q = quiz[index];

    let html = `
        <h3>‡∏Ç‡πâ‡∏≠‡∏ó‡∏µ‡πà ${index + 1}</h3>
        <p>${q.q}</p>
    `;

    q.choices.forEach((choice, i) => {
        html += `<button onclick="checkAnswer(${i})">${choice}</button>`;
    });

    document.getElementById("game").innerHTML = html;
    startTimer();
}

function checkAnswer(choice) {
    clearInterval(timerId);

    if (choice === quiz[index].answer) {
        score++;
        alert("‡∏ï‡∏≠‡∏ö‡∏ñ‡∏π‡∏Å ‚úî");
    } else {
        alert("‡∏ï‡∏≠‡∏ö‡∏ú‡∏¥‡∏î ‚úò");
    }

    index++;
    loadQuestion();
}

loadQuestion();
